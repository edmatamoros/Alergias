<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
>

    <TextView 
        android:text="@string/lbl_nome_categoria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />    

    <Spinner 
        android:id="@+detalhes_alergia/sp_categoria"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:prompt="@string/lbl_nome_categoria"
		style="@style/spinner"
        />    
    
    <TextView 
        android:text="@string/lbl_nome_cadastro_alergia"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    
    <EditText 
        	android:id="@+detalhes_alergia/txtNomeAlergia"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:inputType="text"
        />
 
    <TextView 
        android:text="@string/lbl_nome_cadastro_obs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        />
    
    <EditText 
        	android:id="@+detalhes_alergia/txtObsAlergia"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:inputType="text"
        />

</LinearLayout>
