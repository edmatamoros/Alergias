<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="textFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15dip</item>
    </style>
    
	<style name="inputStyle" parent="@style/textFont">
        <item name="android:textSize">17dip</item>
	    <item name="android:textColor">#696969</item>
	    <item name="android:inputType">textCapWords</item>
    </style>
    
	<style name="textPresentation" parent="@android:style/TextAppearance.Large">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15dip</item>
    </style>

	<style name="dicas" parent="@style/textFont">
        <item name="android:textSize">13dip</item>
	    <item name="android:textColor">#006400</item>
    </style>	    
    
	<style name="botao">
         <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
	    <item name="android:textSize">15dip</item>
	    <item name="android:textColor">#4682B4</item>
	</style>

	<style name="basico" parent="@android:style/Theme.DeviceDefault">
	    <item name="android:textColor">#B0C4DE</item>
		<item name="android:background">@drawable/wall</item>
	</style>
	
	<style name="cabecalho">
	    <item name="android:textColor">#FFFFFF</item>
	    <item name="android:layout_height">wrap_content</item>
		<item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:gravity">center_horizontal</item>
	</style>

	<style name="corpo">
	    <item name="android:layout_below">@id/cabecalho</item>
	    <item name="android:layout_above">@id/rodape</item>
	    <item name="android:textColor">#708090</item>
	</style>

	<style name="rodape">
	    <item name="android:layout_width">match_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_alignParentBottom">true</item>
	    <item name="android:gravity">center_vertical</item>
	    <item name="android:background">@android:color/transparent</item>
	</style>
	
	<style name="spinner" parent="@android:style/Theme">
	    <item name="android:textColor">#ADD8E6</item>
	</style>
				    
</resources>